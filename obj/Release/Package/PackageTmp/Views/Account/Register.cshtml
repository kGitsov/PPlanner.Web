@model PPlanner.Models.RegisterModel
@{
    Dictionary<string, string> resources = PPlanner.GetResources.GetResourcesFromDB();
}

@{
    ViewBag.Title = resources["RegisterTitle"];
}

<style>
    body {
        position: fixed;
        z-index: 999;
        width: 100%;
        height: 100%;
        background-color: black;
        background-color: rgba(0,0,0,.75);
    }

    .navbar > .container {
        display: none;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Registration Form</legend>
        <div class="modal-lg">
            <div class="modal-content" style="background-color:white;">
                <div class="modal-body">
                    <br />
                    <h2 class="text-center login-title">
                        @resources["RegisterHeaderTxt"]
                    </h2>

                    @Html.ValidationSummary()
                    <div class="form-group">
                        @resources["UserName"]
                        <div class="controls">
                            @Html.TextBoxFor(m => m.UserName, new { @Class = "form-control", @Placeholder = resources["PleaseEnterText"] })
                        </div>
                    </div>
                    <div class="form-group">
                        @resources["Password"]
                        <div class="controls">
                            @Html.PasswordFor(m => m.Password, new { @Class = "form-control", @Placeholder = resources["PleaseEnterText"] })
                        </div>
                    </div>
                    <div class="form-group">
                        @resources["AgainPassword"]
                        <div class="controls">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @Class = "form-control", @Placeholder = resources["PleaseEnterText"] })
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <div class="controls">
                            <button class="btn btn-sm btn-success" type="submit" style="width:100px; float:right;">@resources["Register"]</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

@section Scripts {
   
}
