@model PPlanner.Models.LocalPasswordModel
@{
    Dictionary<string, string> resources = PPlanner.GetResources.GetResourcesFromDB();
}

@Html.Partial("_Breadcrumbs", new ViewDataDictionary(ViewData) {
    { "lvl", "24" },
    { "firstVar", User.Identity.Name },
    { "variable", @resources["BreadCrumbChangePasswordSecond"] }
})

<div class="row mainwrapper">
    <div class="span2">
        <p></p>
    </div>

    @using (Html.BeginForm("Manage", "Account"))
    {
        <div class="panel">
            <div class="panel-heading">
                <h4 style="float:left;">
                    @resources["UserProfileTitle"] <a href="@Url.Action("Details", "Account", new { name=User.Identity.Name})">@User.Identity.Name </a>                    
                </h4>
                <div>
                    <a class="btn btn-xs btn-default" style="float:right;" href="@Url.Action("Index", "Project")">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        @resources["BackButton"]
                    </a>                    
                    <div class="controls">
                        <button class="btn btn-xs btn-success" style="float:right; margin-right: 10px;" type="submit">
                            <span class="glyphicon glyphicon-floppy-disk"></span>
                            @resources["SaveButton"]
                        </button>
                    </div>
                </div>
                <div style="clear:both;"></div>
            </div>
            <div class="panel-body">
                <div class="row mainwrapper">
                    <div class="col-md-10 col-sm-offset-1" >
                        <br />
                        @Html.AntiForgeryToken()
                        
                        <fieldset>
                            <legend>Change Password Form</legend>

                            <div class="form-group">
                                <div class="controls">
                                    @resources["UserOldPassword"]
                                    @Html.TextBoxFor(m => m.OldPassword, new { @Class = "form-control " })
                                    @Html.ValidationMessageFor(m => m.OldPassword)
                                </div>                            
                                <div class="controls">
                                    @resources["UserNewPassword"]
                                    @Html.TextBoxFor(m => m.NewPassword, new { @Class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.NewPassword)
                                </div>                            
                                <div class="controls">
                                    @resources["AgainPassword"]
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @Class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                           
                            </div>
                        </fieldset>                    
                    </div>
                </div>
            </div>
        </div>
    }
</div>

