
@{
    Dictionary<string, string> resources = PPlanner.GetResources.GetResourcesFromDB();
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Raw(TempData["msg"])

<div class="row mainwrapper">
    <div class="span2">
        <p></p>
    </div>

    @using (Html.BeginForm("Create", "ProjectDevelopers", FormMethod.Post))
    {

        <div class="panel">
            <div class="panel-heading">
                <h4 style="float:left;">@resources["ProjectDeveloperAddHeadingTxt"]</h4>
                <div>
                    <a class="btn btn-xs btn-default" style="float:right;" href="@Url.Action("Details", "Project", new { @id = ViewBag.ProjectId})">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        @resources["BackButton"]
                    </a>
                </div>
                <div class="controls">
                    <button class="btn btn-xs btn-success" style="float:right; margin-right: 10px;" type="submit">
                        <span class="glyphicon glyphicon-plus"></span>
                        @resources["InitiateNewButton"]
                    </button>
                </div>
                <div style="clear:both;"></div>
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <fieldset>
                <legend>ProjectDeveloperAdd</legend>

                <div class="panel-body">
                    <br />
                    <div class="col-md-10 col-md-offset-1">
                        <h4>@resources["ProjectCreateHeading"]</h4>
                        <br />
                        @Html.Hidden("ProjectId", (string)ViewBag.ProjectId)
                        
                        <div class="form-group">
                            <div class="controls">
                                @resources["BacklogEditUserName"]
                                @Html.DropDownList("UsersList", (SelectList)ViewBag.UserList, @resources["PleaseWait"], new { @Class = "form-control" })
                                
                            </div>
                        </div>

                        <div class="controls">
                            @resources["Role"]
                            @Html.DropDownList("RoleName", (SelectList)ViewBag.RoleName, @resources["PleaseWait"], new { @Class = "form-control" })
                           
                        </div>


                    </div>
                </div>
            </fieldset>
        </div>
    }



</div>

