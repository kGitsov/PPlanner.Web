
@{
    ViewBag.Title = "Upload resources";
}

<div class="row mainwrapper">
    <div class="span2">
        <p></p>
    </div>

    @using (Html.BeginForm("UpdateEN", "Resources", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel">
            <div class="panel-heading">
                <h4 style="float:left;">ResourceUpdateHeadingTxt</h4>

                <div class="controls">
                    <button class="btn btn-xs btn-success" style="float:right; margin-right: 10px;" type="submit">
                        <span class="glyphicon glyphicon-plus"></span>
                        SaveButton
                    </button>
                </div>
                <div style="clear:both;"></div>
            </div>

            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <fieldset>
                <legend>Resources</legend>
                <div class="panel-body">
                    <br />
                    <div class="col-md-10 col-md-offset-1">

                        <div class="display-label">
                            ResourceUpdateFileUpload
                        </div>
                        <div class="form-group">
                            <div class="controls">
                                <input type="file" name="fileUpload" />
                            </div>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>
    }

</div>