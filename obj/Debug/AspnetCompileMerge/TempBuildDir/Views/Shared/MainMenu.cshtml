@model List<PPlanner.Models.MenuItemModel>

@{
    Dictionary<string, string> resources = PPlanner.GetResources.GetResourcesFromDB();
}
@{
    ViewBag.Title = "_MainMenu";
}
  
 
@foreach (var menuItem in Model)
{
    switch (menuItem.Text)
    {
        case "Проект":
            <li>
                <a href="@Url.Action(menuItem.Action, menuItem.Controller, menuItem.Routedata)">
                    <span class="glyphicon glyphicon-file"></span>  Проект
                </a>
            </li>
            break;
        case "Backlog":
            <li>
                <a href="@Url.Action(menuItem.Action, menuItem.Controller, menuItem.Routedata)">
                    <span class="glyphicon glyphicon-list-alt"></span>  Backlog
                </a>
            </li>
            break;
        case "Scrumboard":
            <li>
                <a href="@Url.Action(menuItem.Action, menuItem.Controller, menuItem.Routedata)">
                    <span class="glyphicon glyphicon-calendar"></span>  Scrumboard
                </a>
            </li>
            break;
        default:
            <li>
                <a href="@Url.Action(menuItem.Action, menuItem.Controller, menuItem.Routedata)">
                    <span class="glyphicon glyphicon-calendar"></span>  Начало
                </a>
            </li>
            break;
    }
}
    
