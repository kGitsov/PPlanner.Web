@model PPlanner.Models.Project
@{
    Dictionary<string, string> resources = PPlanner.GetResources.GetResourcesFromDB();
}
@{
    ViewBag.Title = resources["ProjectDeleteTitle"];
}

@*@Html.MvcSiteMap().SiteMapPath()*@

@Html.Partial("_Breadcrumbs", new ViewDataDictionary(ViewData) {
    { "lvl", "3" },
    { "projectId", Model.ProjectId },
    { "projectName", Model.Name},
    { "variable", @resources["BreadCrumbDeleteProjectSecond"]}
})

<div class="row mainwrapper">
    <div class="span2">
        <p></p>
    </div>

    <div class="panel">
        <div class="panel-heading">
            <h4 style="float:left;">@resources["ProjectDeleteHeadingTxt"] @Model.Name</h4>

            <ul class="list-unstyled">
                <li>
                    <a class="btn btn-xs btn-default" style="float:right;" href="@Url.Action("Index", "Project")">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        @resources["BackButton"]
                    </a>  
                    
                
                @using (Html.BeginForm())
                {
                    <li>
                        <button type="submit" value="" class="btn btn-xs btn-danger pull-right" style="margin-right:10px;">
                            <span class="glyphicon glyphicon-trash"></span>
                            @resources["DeleteButton"]
                        </button>
                    
                    </li>
                }

            </ul>
            <div style="clear:both;"></div>
        </div>
        <fieldset>
            <div class="panel-body">
                <br />

                <div class="col-sm-10 col-sm-offset-1">
                    <legend>Project</legend>
                    <h4>@resources["ProjectDeleteHeading"]</h4>
                    <br />
                    @Html.HiddenFor(model => model.ProjectId)
                    @Html.HiddenFor(model => model.StartDate)

                    <div class="display-label">
                        @resources["ProjectName"]
                    </div>
                    <div class="list-group-item disabled">
                        @Html.DisplayFor(model => model.Name)
                    </div>

                    <div class="display-label">
                        @resources["ProjectStartDate"]
                    </div>
                    <div class="list-group-item disabled">
                        @Html.DisplayFor(model => model.StartDate)
                    </div>

                    <div class="display-label">
                        @resources["ProjectEndDate"]
                    </div>
                    <div class="list-group-item disabled">
                        @Html.DisplayFor(model => model.EndDate)
                    </div>

                    <br />
                </div>
            </div>
        </fieldset>
    </div>
</div>






