<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <link href="~/favicon.ico" rel="shortcut icon" type="image/svg" />
        <link href="~/Content/bootstrap.css" rel="stylesheet">
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
        <link href="~/Content/awesome-bootstrap-checkbox.css" rel="stylesheet" />

        <title>@ViewBag.Title - PPlanner</title>

        <style>
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
        </style>

    </head>

    <body>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")

        @Scripts.Render("~/bundles/modernizr")

        <div class="navbar navbar-fixed-top" style="background-color: #2e56a9; height: 15px;">
            <header class="colorgraph"></header>
            <div class="container" style="padding-left: 0px; padding-right: 0px;  ">
                    <!--<a class="navbar-brand" href="#">PPlanner</a>-->
                <div style="float:left;">
                    <ul class="nav navbar-nav">
                        @Html.Action("MainMenu", "Project")
                    </ul>
                </div>
                <div style="float:right;">
                    <ul class="nav navbar-nav">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
                <div style="clear:both;"></div>
            </div>
        </div>
        <div class="container">
            <div id="StatusArea" >                
                <div id="blockUI">
                     <h4> <img src="~/Images/ajax-loader.gif"> Моля изчакайте ...</h4>
                </div>
            </div>
            
            

            @RenderBody()

                        
        </div>
        <footer class="navbar-fixed-bottom">

            <div class="footer colorgraph"></div>
        </footer>

        @Scripts.Render("~/bundles/PPlanner")

        @*    @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryui")

            <script src="~/Scripts/bootstrap.js"></script>
            <script src="~/Scripts/main.js"></script>*@

        @RenderSection("scripts", required: false)


    </body>
</html>